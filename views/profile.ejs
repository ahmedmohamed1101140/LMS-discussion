<% include ./partials/header%>

<div class="container">
    <header class="jumbotron">

        <h1>Welcome To Ain Shams Discussion Board</h1>
        <p>Edit Your profile</p>
    </header>

    <div class="container">
        <div class="row">
            <div style="width:30%; margin:25px auto;">

                <form action="/profile" method="POST">
                    <div class="form-group">
                        First Name: <input class="form-control" value="<%=currentUser.firstname%>" type="text" name="firstname" placeholder="First Name" required="true">
                    </div>
                    <div class="form-group">
                        Last Name: <input class="form-control" value="<%=currentUser.lastname%>" type="text" name="lastname" placeholder="Last Name" required="true">
                    </div>
                    <div class="form-group">
                        Email: <input class="form-control" type="email" value="<%=currentUser.email%>" name="email" placeholder="email" required="true">
                    </div><div class="form-group">
                        Image URL: <input class="form-control" type="text" value="<%=currentUser.image%>" name="image" placeholder="Image URL" required="true">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

<% include ./partials/footer %>