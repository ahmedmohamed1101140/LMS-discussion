<!DOCTYPE html>
<html lang="en">
<head>
  <title>Web Project</title>
    <link rel="stylesheet" href="/stylesheets/landing.css">
    <link href="https://fonts.googleapis.com/css?family=Baloo+Bhaina" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
</head>
<body>

<nav class="navbar navbar-size-large navbar-default navbar-fixed-top ">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>                        
      </button>
        <div class="navbar-brand navbar-bramd-logo">
            <a   href="#">Learning</a>
        </div>
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav navbar-right">
            <% if (!currentUser) { %>
            <li><a href="/login">Login</a></li>
            <li><a href="/register">Sign Up</a></li>
            <% } else { %>
            <li><img style="margin-top: 5px;" src="<%= currentUser.image%>" width="40px" height="40px" class="img-circle" alt="Cinque Terre"></li>
            <li><a href="#"><strong><%= currentUser.username %></strong></a></li>
            <li><a href="/logout">Logout</a></li>
            <% } %>
        </ul>
    </div>
  </div>
</nav>
   

    <div class="page-section">
        <button type="button" class="btn btn-secondary pull-right">Add New Group</button>
        <div class="page-title">
           <h1 class="title"> Welcome to AIN SHAMS Discusion Board</h1>
        </div>
    </div> 
    <div class="row">
        <%groups.forEach(function (group) {%>
                 <div class="col-md-5">
                    <div class="card" >
                        <img src="<%=group.image%>" class="card-img-top" alt="card image"><hr>
                        <div class="card-block">
                            <h4 class="card-title" style="text-align: center;"> <%=group.name%></h4><hr>
                            <p class="card-text" style="margin-left: 7px;"> <%=group.admin.username%> Is the Admin</p>
                            <a href="/groups/<%= group._id %>"class="btn btn-secondary" style="margin-left: 15px; margin-bottom: 10px;">Visit Group</a>
                            <a href="/groups/request/<%= group._id %>" type="button" class="btn btn-secondary" style="margin-left: 85px; margin-bottom: 10px; display: inline;">Join Group</a>

                         </div>
                     </div>
                </div>
        <% }); %>

    </div>
    
    
     <div class="footer">
                    <span>Copyrights Â© 2017 all right reserved for <br>Learning managment System Team</span>
                    <ul>
                        <a href="www.googleplus.com" > <li><i class="fa fa-google-plus" aria-hidden="true"></i></li></a>
                        <a href="www.linkedin.com" > <li><i class="fa fa-linkedin" aria-hidden="true"></i></li></a>
                    </ul>
                    
                    
                </div>
    

</body>
</html>
