<!DOCTYPE html>
<html lang="en">
<head>
  <title>Web Project</title>
    <link rel="stylesheet" href="/stylesheets/landing.css">
    <link href="https://fonts.googleapis.com/css?family=Baloo+Bhaina" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
</head>
<body>

<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="/"><img height="30px" width="30px" class="img-circle" src="https://d30zbujsp7ao6j.cloudfront.net/wp-content/uploads/2017/07/unnamed.png" alt="lms" > </a>
            <a class="navbar-brand" href="/groups">Home</a>
            <a class="navbar-brand" href="/profile">profile</a>
            <a class="navbar-brand" href="/about-us">About us</a>
        </div>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav navbar-right">
                <% if (!currentUser) { %>
                <li><a href="/login">Login</a></li>
                <li><a href="/register">Sign Up</a></li>
                <% } else { %>
                <li><img src="<%= currentUser.image%>" width="40px" height="40px" class="img-circle" alt="Cinque Terre"></li>
                <li><a href="/profile"><strong><%= currentUser.username %></strong></a></li>
                <li><a href="/logout">Logout</a></li>
                <% } %>
            </ul>
        </div>
    </div>
</nav>

    <div class="page-section">
        <% if (currentUser) { %>
        <% if (currentUser.usertype <= 1) { %>
        <p>
            <a class="btn btn-secondary pull-right" href="/groups/new">Add new Group</a>
        </p>
        <% } %>
        <% } %>
        <div class="page-title">
           <h1 class="title"> Welcome to AIN SHAMS Discusion Board</h1>
        </div>
    </div>

<div class="container">
    <% if (error && error.length > 0) { %>
    <div class="alert alert-danger" role="alert"><%= error %></div>
    <% } %>
    <% if (success && success.length > 0) { %>
    <div class="alert alert-success" role="alert"><%= success %></div>
    <% } %>
</div>
    <div class="row">
        <%groups.forEach(function (group) {%>
                 <div class="col-md-5">
                    <div class="card" >
                        <img src="<%=group.image%>" class="card-img-top" alt="card image"><hr>
                        <div class="card-block">
                            <h4 class="card-title" style="text-align: center;"> <%=group.name%></h4><hr>
                            <p class="card-text" style="margin-left: 7px;"> <%=group.admin.username%> Is the Admin</p>
                            <a href="/groups/<%= group._id %>"class="btn btn-secondary" style="margin-left: 15px; margin-bottom: 10px;">Visit Group</a>
                            <a href="/groups/request/<%= group._id %>" type="button" class="btn btn-secondary" style="margin-left: 85px; margin-bottom: 10px; display: inline;">Join Group</a>

                         </div>
                     </div>
                </div>
        <% }); %>

    </div>


     <div class="footer">
                    <span>Copyrights Â© 2017 all right reserved for <br>Learning managment System Team</span>
                    <ul>
                        <a href="www.googleplus.com" > <li><i class="fa fa-google-plus" aria-hidden="true"></i></li></a>
                        <a href="www.linkedin.com" > <li><i class="fa fa-linkedin" aria-hidden="true"></i></li></a>
                    </ul>


                </div>


</body>
</html>
