<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align:center">Edit comment</h1>
        <div style="width:30%; margin:25px auto;">

            <form action="/groups/<%= Group_id %>/posts/<%=Post_id%>/comments/<%=Comment._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <h4>Group Name:</h4>
                    <input class="form-control" type="text" name="content" value="<%= Comment.content %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>

            <a href="/groups/<%= Group_id %>/posts/<%=Post_id%>/comments">Go back to view groups</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>